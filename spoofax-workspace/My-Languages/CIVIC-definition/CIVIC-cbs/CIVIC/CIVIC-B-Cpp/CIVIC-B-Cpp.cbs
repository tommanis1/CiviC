Syntax
	CPPDDecl : cpp-decl ::= 'include' '<' cpp-std-lib '>'
Rule declare[[ CPPDDecl ]] = ()
Rule initialise[[ CPPDDecl ]] = ()
//Rule declare[[ CPPDDecl ]] = ()
Rule initialise-lib[[ 'include' '<' 'iostream' '>' ]] = assign(bound "_std", map-unite(assigned(bound("_std")),
{
	"std::endl" |-> "\n",
	"std::cout" |-> print
}))

Rule initialise-lib[[ 'include' '<' 'mutex' '>' ]] = assign(bound "_std", map-unite(assigned(bound("_std")),
{
	"std::mutex" |-> 
	 class (
        thunk closure           // class instantiator
          reference
	object(fresh-atom, "std::mutex",
{
"self" |-> allocate-initialised-variable(syncs, exclusive-lock-create)
}
          ),
             { "lock" |->
      function closure
        sequential ( print("1"), print(
        lookup(object-single-inheritance-feature-map 
            checked dereference first tuple-elements given, "self")
            ) ) }
          )
          
          }))
          

Rule initialise-lib[[ 'include' '<' 'thread' '>' ]] = ()
Otherwise initialise-lib[[ Decl ]] = ()

