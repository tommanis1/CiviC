Language "CIVIC"

#B Cpp



Lexis
	CPP-Lib: cpp-std-lib ::= 'iostream' | 'chrono' | 'thread' | 'mutex' 
	CPPLibLoc : lib-loc ::= 'std' ':' ':' ('A'-'Z'|'a'-'z'|'_')* ( ':' ':' ('A'-'Z'|'a'-'z'|'_')+)*
Syntax
	CPPE : cpp-expr ::= id '.' id '(' ')' | id '.' id
//					| '++' exp | exp '++'
//Rule eval[[ CPPLibLoc ]] = lookup(assigned(bound("_std")), \"CPPLibLoc\")
Rule eval[[ ID1 '.' ID2 '(' ')' ]] = 
 give ( bound(id[[ ID1]]),
      apply (
        lookup (
//        lookup the method
          class-feature-map lookup
                                   (assigned
                                      (bound
                                         ("_std")),
                                    object-class-name checked dereference given),   //class name                                  
          id[[ID2]] ),
        tuple ( given, () ) ) )

Rule eval[[ ID1 '.' ID2 ]] = 
        lookup(object-feature-map dereference bound (id[[ ID1 ]] ), id[[ ID1 ]])
